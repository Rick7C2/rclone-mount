#!/bin/bash

export LOCAL_DIR="/mnt/local/"

function upload {
    set -e
    LOCAL_PATH="$0"
    REMOTE_PATH="${LOCAL_PATH#$LOCAL_DIR}"
    REMOTE_DIR=`dirname "$REMOTE_PATH"`
    set -x
    time rclone move -vv "$LOCAL_PATH" "$RCLONE_REMOTE:$REMOTE_DIR"
}
export -f upload

find $LOCAL_DIR -type f -exec /bin/bash -c 'upload "$0"' {} \;
